---
extends:
  airbnb
environment:
  es6
env:
  node: true
  browser: true
  mocha: true
parserOptions:
  sourceType: module
rules:
  quotes:
    - 2
    - single
    - avoid-escape
  semi:
    - 2
    - never
  comma-dangle:
    - 2
    - never
  no-use-before-define:
    - 2
    - nofunc
  eqeqeq:
    - 1
    - smart
